@model mv.DataModel.Rates

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    double sp = Model.StarPoint;
    int rc = Model.RateCount;
    double rt = sp / rc;
    string sonuc = rt.ToString();
    if (rt.ToString().Length > 1)
    {
        rt = Math.Round(rt, 2);
        string[] rr = rt.ToString().Split(',');
        sonuc = rr[0] + '.' + rr[1];
    }

}
<head>
    <link href="~/Content/star-rating.css" rel="stylesheet" media="all" type="text/css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>

    <script src="~/Scripts/star-rating.min.js" type="text/javascript"></script>
</head>
@using (Html.BeginForm("Rating", "Rate", FormMethod.Post))
{
    @Html.ActionLink("blala", "ShareRate","Rate")
    <div class="panel panel-primary" style="width:500px; height:680px; margin:auto; margin-top:50px">
        <div class="panel-heading">
            <h3 class="panel-title">@Model.Users.Name</h3>
        </div>
        <div class="panel-body">
            <div style="float:left">
                <img src='@Url.Content(Model.PictureLoc)' alt='p' width="350px" height="450px" />
            </div>
            <div style="float:left; margin-left:30px; margin-top:100px">
                <ul id="tik" class="pagination pagination-lg">
                    <input id="btnNext" type="submit" value="&raquo;" class="btn btn-success" />
                </ul>
            </div>
            <div style="clear:both">
                <input name="rateID" value="@Model.ID" id="Text1" type="hidden" />
                <input name="rate" id="rate" value="@sonuc" type="number" class="rating" min=0 max=5 step=0.1 data-rtl=1 data-container-class='text-right' data-glyphicon=0>
            </div>
        </div>
    </div>
}



